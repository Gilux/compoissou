{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des articles</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>{% if article.dateCreation %}{{ article.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if article.dateModif %}{{ article.dateModif|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('article_show', { 'id': article.id }) }}" class="btn btn-success">Consulter</a>
                    <a href="{{ path('article_edit', { 'id': article.id }) }}" class="btn btn-info">Éditer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('article_new') }}">Créer un nouvel article</a>

{% endblock %}
